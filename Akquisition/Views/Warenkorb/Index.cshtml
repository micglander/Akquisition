@model List<efAkquisition.tbl_WarenkorbProjektRel>
@{
    ViewBag.Title = "Favoriten";
}

<h2>Favoriten</h2>
<hr/>

@using (Html.BeginForm("Index", "Warenkorb", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        <input type="submit" value="Speichern" class="btn btn-primary" />
    </div>
    
    <div class="form-group">
        <table class="table">
            <tr>
                <th>@Html.Label("Prio")</th>
                <th>@Html.Label("Projekt")</th>
            </tr>            
            
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Html.TextBoxFor(model => model[i].Prio, new { style = "width:50px" })</td>
                    <td>@Html.DisplayFor(model => model[i].tbl_Projekte.TITEL_PROJEKT_FILM)</td>
                    <td>@Html.HiddenFor(model => model[i].ID)</td>
                    <td>@Html.HiddenFor(model => model[i].WarenkorbNr)</td>
                    <td>@Html.HiddenFor(model => model[i].EntryNo)</td>
                    <td>@Html.ActionLink("Löschen", "Delete", new { id = Model[i].ID }, new { onclick = "return confirm('Soll das Projekt aus der Liste entfernt werden?');" })</td>
                </tr>
            }
        </table>
    </div>
}

