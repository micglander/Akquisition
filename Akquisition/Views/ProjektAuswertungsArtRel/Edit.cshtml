@model List<efAkquisition.tbl_ProjektAuswertungsArtRel>
@{
    ViewBag.Title = "Auswertungspotential: " + ViewBag.Projekt;
}

<h3>@Html.Raw(ViewBag.Title)</h3>
<hr/>

@using (Html.BeginForm("Edit", "ProjektAuswertungsArtRel", FormMethod.Post))
{
    <div class="form-horizontal">

            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-group">
                    <div class="col-md-2">
                        @Html.DisplayFor(model => model[i].tbl_Auswertungsart.Auswertungsart)
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(Model => Model[i].Potential, new { @class = "smallEditor" } )
                    </div>
                    <div class="col-md-2">
                        @Html.ActionLink("Löschen", "Delete", new { EntryNo = Model[i].EntryNo, AuswertungsartNr = Model[i].AuswertungsartNr }, new { onclick = "return confirm('Soll die Einschätzung entfernt werden?');" })
                    </div>
                        @Html.HiddenFor(model => model[i].EntryNo)
                        @Html.HiddenFor(model => model[i].AuswertungsartNr)
               </div>
            }
        <div class="form-group">
            <input type="submit" value="Speichern" class="btn btn-primary" />
        </div>
    </div>

    
}

