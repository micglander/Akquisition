@model IEnumerable<efAkquisition.tbl_Land>

@{
    ViewBag.Title = "Länder";
}

<h2>Länder</h2>
<hr/>

<p>
    @Html.ActionLink("Neues Land erstellen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Land)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sortierung)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Land)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sortierung)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.LandNr }) |
            @Html.ActionLink("Details", "Details", new { id=item.LandNr }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.LandNr })
        </td>
    </tr>
}

</table>
