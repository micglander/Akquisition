@model List<efAkquisition.tbl_ProjektGenreRel>
@{
    ViewBag.Title = "Genres bearbeiten: " + ViewBag.Projekt;
}

<h3>@Html.Raw(ViewBag.Projekt)</h3>

@using (Html.BeginForm("Edit", "ProjektGenreRel", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        <table>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Html.DropDownListFor(model => model[i].GenreNr, new SelectList(ViewBag.Auswahl, "GenreNr", "Genre", Model[i].GenreNr))</td>
                    <td>@Html.HiddenFor(model => model[i].ID)</td>
                    <td>@Html.HiddenFor(model => model[i].EntryNo)</td>
                    <td>@Html.ActionLink("Löschen", "Delete", new { ID = Model[i].ID }, new { onclick = "return confirm('Soll das Genre entfernt werden?');" })</td>
                </tr>
            }
        </table>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Speichern" class="btn btn-primary" />
    </div>
}

