@model Akquisition.MyStuff.ProjektFilter

@{
    ViewBag.Title = "Filter";
}


    <div class="jumbotron">
        <h1>Tobis Film Akquisition</h1>
        <p class="lead">Projekte</p>
    </div>

@using (Html.BeginForm("Filter", "Projekte", FormMethod.Post))
{
        <div class="form-horizontal">
            @Html.HiddenFor(m => m.IsReal)

            <div class="form-group">
                @Html.LabelFor(m => m.Titel, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(m => m.Titel, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.zustaendig, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownList("zustaendig", null, String.Empty, htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Anbieter, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(m => m.Anbieter, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ab, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(m => m.ab, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Archiv, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownList("Archiv", null, String.Empty, htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownList("Status", null, String.Empty, htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Land, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownList("Land", null, String.Empty, htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Beteiligter, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(m => m.Beteiligter, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Lektorat, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownList("Lektorat", null, String.Empty, htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Rating, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownList("Rating", null, String.Empty, htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Volltext, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(m => m.Volltext, new { htmlAttributes = new { @class = "form-control" } })
               
            </div>

            <div class="form-group">
                @Html.Label(" ", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.ValidationMessageFor(m => m.Volltext, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @*<input type="submit" value="GO" class="col-lg-offset-2" />*@
                <div class="col-lg-offset-2">
                    <input type="submit" value="GO" class="btn btn-primary btn-sm" />
                    <input type="reset" value="Clear" class="btn btn-primary btn-sm" style="margin-left: 5px" />
                </div>
            </div>

            <div class="form-group">
                @*<input type="submit" value="GO" class="col-lg-offset-2" />*@
                <div class="col-lg-offset-2">
                    @Html.ActionLink("Neues Projekt erstellen", "Create")
                </div>
            </div>

        </div>
    
}
