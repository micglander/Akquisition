@model List<efAkquisition.tbl_Themen>
@{
    ViewBag.Title = "Themen bearbeiten: " + ViewBag.Projekt;
}

<h3>@Html.Raw(ViewBag.Projekt)</h3>

@using (Html.BeginForm("Edit", "Themen", FormMethod.Post))
{
    <div class="form-group">
        <table>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Html.EditorFor(model => model[i].Thema)</td>
                    <td>@Html.HiddenFor(model => model[i].ThemaID)</td>
                    <td>@Html.HiddenFor(model => model[i].EntryNo)</td>
                    <td>@Html.ActionLink("Löschen", "Delete", new { ID = Model[i].ThemaID }, new { onclick = "return confirm('Soll das Thema entfernt werden?');" })</td>
                </tr>
            }
        </table>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Speichern" class="btn btn-primary" />
    </div>
}

