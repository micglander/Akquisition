@model efAkquisition.tbl_Firmen

@{
    ViewBag.Title = "Produktionsfirma löschen";
}

<h3>Wollen Sie diese Produktionsfirma wirklich löschen?</h3>
<hr />

<div>
    <div class="form-group" style="font-weight:bold">
        @Html.DisplayFor(model => model.Firma)
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <input type="submit" value="Löschen" class="btn btn-primary" />
        </div>

        <div class="form-group">
            @Html.ActionLink("Zum Index", "Index")
        </div>
    }
</div>
