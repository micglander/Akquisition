@model efAkquisition.tbl_Personen

@{
    ViewBag.Title = "Personen-Filter";
}

<h2>Personen anzeigen</h2>
<div>
    @Html.ActionLink("Neue Peson erstellen", "Create")
</div>
<hr />

@using (Html.BeginForm("Index", "Personen"))
{
    <div class="form-group">
        @Html.Label("Name", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    
    <div class="form-group">
        <div class="col-lg-offset-2">
            <input type="submit" value="GO" class="btn btn-primary btn-sm" />
            <input type="reset" value="Clear" class="btn btn-primary btn-sm" style="margin-left: 5px" />
        </div>
    </div>
}

